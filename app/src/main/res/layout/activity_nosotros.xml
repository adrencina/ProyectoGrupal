<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nosotros"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Nosotros"
    android:background="@color/blanco"
    android:orientation="vertical"
    android:layout_gravity="center">

<ImageView
    android:id="@+id/logotipoSearchFriend"
    android:layout_width="224.21dp"
    android:layout_height="47.94dp"
    android:background="@drawable/logotipo_search_friend"
    android:layout_marginTop="34.97dp"
    android:layout_marginLeft="31.71dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    />

<ImageView
    android:id="@+id/atrasizq"
    android:layout_width="30.96dp"
    android:layout_height="27.09dp"
    android:src="@drawable/flecha_volver"
    app:layout_constraintTop_toBottomOf="@+id/logotipoSearchFriend"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginLeft="30dp"
    android:layout_marginTop="20dp"/>

<ImageView
    android:src="@drawable/integrantes"
    android:id="@+id/textIntegrantes"
    android:contentDescription="Solo es la imagen del texto integrantes"
    android:layout_width="175dp"
    android:layout_height="50dp"
    android:layout_marginTop="150dp"
    android:layout_marginLeft="180dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"/>

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recyclerIntegrantes"
    android:contentDescription="Recicler para los integrantes"
    android:layout_width="match_parent"
    android:layout_height="245dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="200dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    tools:itemCount="1"
    android:background="@color/naranja"/>

<TextView
    android:text="Sobre nosotros"
    android:id="@+id/sobreNosotros"
    android:fontFamily="@font/robotobold"
    android:textSize="36dp"
    android:layout_width="250dp"
    android:layout_height="40dp"
    app:layout_constraintTop_toBottomOf="@+id/recyclerIntegrantes"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="140dp"
    />

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recyclerSobreNosotros"
    android:layout_width="match_parent"
    android:layout_height="235dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="0dp"
    app:layout_constraintTop_toBottomOf="@+id/sobreNosotros"
    tools:itemCount="1"
    android:background="@color/naranja"/>


</androidx.constraintlayout.widget.ConstraintLayout>