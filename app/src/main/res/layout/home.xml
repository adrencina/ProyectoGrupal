<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco">


    <TextView
        android:id="@+id/titleSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="86dp"
        android:text="Search"
        android:textSize="36sp"
        android:textStyle="normal"
        android:fontFamily="@font/robotobold"
        android:textColor="@color/naranja"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/titleFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/robotobold"
        android:text="Friend"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/titleSearch"
        app:layout_constraintTop_toTopOf="parent" />



    <ImageView
        android:id="@+id/boton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle_white_shape"
        android:layout_marginTop="41dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleSearch"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/text_boton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aleatorio"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/boton1"
        app:layout_constraintEnd_toEndOf="@+id/boton1"
        app:layout_constraintStart_toStartOf="@+id/boton1"
        app:layout_constraintTop_toTopOf="@+id/boton1" />

    <ImageView
        android:id="@+id/boton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle_black_shape"
        app:layout_constraintStart_toEndOf="@+id/boton1"
        app:layout_constraintTop_toBottomOf="@+id/titleSearch"
        android:layout_marginTop="41dp"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/text_boton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perritos"
        android:textSize="16sp"
        android:textColor="@color/blanco"
        app:layout_constraintBottom_toBottomOf="@+id/boton2"
        app:layout_constraintEnd_toEndOf="@+id/boton2"
        app:layout_constraintStart_toStartOf="@+id/boton2"
        app:layout_constraintTop_toTopOf="@+id/boton2" />

    <ImageView
        android:id="@+id/boton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle_white_shape"
        app:layout_constraintStart_toEndOf="@+id/boton2"
        app:layout_constraintTop_toBottomOf="@+id/titleSearch"
        android:layout_marginTop="41dp"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/text_boton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nosotros"
        android:textSize="16sp"
        android:textColor="@color/negro"
        app:layout_constraintBottom_toBottomOf="@+id/boton3"
        app:layout_constraintEnd_toEndOf="@+id/boton3"
        app:layout_constraintStart_toStartOf="@+id/boton3"
        app:layout_constraintTop_toTopOf="@+id/boton3" />

    <ImageView
        android:id="@+id/boton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circle_orange_shape"
        app:layout_constraintStart_toEndOf="@+id/boton3"
        app:layout_constraintTop_toBottomOf="@+id/titleSearch"
        android:layout_marginTop="41dp"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/text_boton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:textSize="16sp"
        android:textColor="@color/blanco"
        app:layout_constraintBottom_toBottomOf="@+id/boton4"
        app:layout_constraintEnd_toEndOf="@+id/boton4"
        app:layout_constraintStart_toStartOf="@+id/boton4"
        app:layout_constraintTop_toTopOf="@+id/boton4" />




    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="90dp"
        android:text="Adoptame"
        android:fontFamily="@font/robotoregular"
        android:textColor="@color/naranja"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lista_home"
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:contentDescription="recycler de perros"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:listitem="@layout/card_img"/>


</androidx.constraintlayout.widget.ConstraintLayout>