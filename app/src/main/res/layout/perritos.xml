<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/blanco"
    android:orientation="vertical"
    android:layout_gravity="center">
    
    <ImageView
        android:id="@+id/logotipoSearchFriend"
        android:contentDescription="Logotipo Search Friend"
        android:layout_width="224.21dp"
        android:layout_height="47.94dp"
        android:background="@drawable/logotipo_search_friend"
        android:layout_marginTop="53dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    
    <ImageView
        android:layout_width="50.9dp"
        android:layout_height="53.92dp"
        android:background="@drawable/huellita"
        android:contentDescription="Aqui va la imagen de la huellita"
        android:layout_marginTop="101dp"
        android:layout_marginLeft="305dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listaSearchFriend"
        android:layout_width="match_parent"
        android:layout_height="443dp"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:itemCount="1"
        android:background="@color/naranja"/>

</androidx.constraintlayout.widget.ConstraintLayout>